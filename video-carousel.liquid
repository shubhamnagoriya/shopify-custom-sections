    font-size: 24px;
    z-index: 1;
    transition: background 0.3s;
  }

  .carousel-nav-btn:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  .carousel-nav-btn.prev {
    left: 10px;
  }

  .carousel-nav-btn.next {
    right: 10px;
  }

  .carousel-dots {
    display: flex;
