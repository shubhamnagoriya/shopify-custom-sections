<style>
  .video-carousel-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
    position: relative;
    isolation: isolate;
  }

  .video-carousel-heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: 2px;
    margin-bottom: 3rem;
    color: {{ section.settings.heading_color }};
  }

  .video-carousel-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .video-carousel-wrapper {
    overflow: hidden;
    position: relative;
  }

  .video-carousel-track {
    display: flex;
    transition: transform 0.5s ease;
    gap: 20px;
  }

  .video-carousel-slide {
    flex: 0 0 calc((100% - ({{ section.settings.desktop_columns | minus: 1 }} * 20px)) / {{ section.settings.desktop_columns }});
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
    aspect-ratio: 9 / 16;
  }

  .video-carousel-slide video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .video-mute-toggle {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(0, 0, 0, 0.6);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 18px;
    z-index: 3;
    transition: background 0.3s;
  }

  .video-mute-toggle:hover {
    background: rgba(0, 0, 0, 0.8);
  }

  /* Product Card Overlay Styles */
  .product-card-overlay {
    position: absolute;
    bottom: 10px;
    left: 10px;
    right: 10px;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-radius: 14px;
    padding: 10px;
    z-index: 2;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .product-mini-carousel {
    position: relative;
  }

  .product-cards-wrapper {
    overflow: hidden;
    position: relative;
  }

  .product-cards-track {
    display: flex;
    transition: transform 0.3s ease;
  }

  .product-card-item {
    flex: 0 0 100%;
    text-decoration: none;
    color: inherit;
  }

  .product-card-top {
    display: flex;
    gap: 12px;
    align-items: center;
    margin-bottom: 12px;
  }

  .product-card-image {
    width: 70px;
    height: 70px;
    border-radius: 12px;
    object-fit: cover;
    background: #f5f5f5;
    flex-shrink: 0;
  }

  .product-card-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 6px;
    min-width: 0;
  }

  .product-card-button {
    background: #000;
    color: #fff;
    border: none;
    padding: 7px 20px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 700;
    cursor: pointer;
    text-align: center;
    transition: background 0.3s, transform 0.2s;
    text-decoration: none;
    display: inline-block;
    line-height: 1.2em;
  }

  .product-card-button:hover {
    background: #333;
    transform: translateY(-1px);
  }

  .product-card-prices {
    display: flex;
    align-items: baseline;
    gap: 8px;
    flex-wrap: wrap;
  }

  .product-card-compare-price {
    font-size: 12px;
    font-weight: 500;
    color: #aaa;
    text-decoration: line-through;
    margin: 0;
    line-height: 8px;
  }

  .product-card-price {
    font-size: 18px;
    font-weight: 600;
    color: #000;
    margin: 0;
    line-height: 10px;
  }

  .product-card-title {
    font-size: 13px;
    font-weight: 600;
    color: #000;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Mini Carousel Navigation */
  .product-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.7);
    border: none;
    border-radius: 50%;
    width: 28px;
    height: 28px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
    z-index: 3;
    transition: background 0.3s;
    padding: 0;
    line-height: 1;
  }

  .product-nav-btn:hover {
    background: rgba(0, 0, 0, 0.9);
  }

  .product-nav-btn.prev {
    left: -5px;
  }

  .product-nav-btn.next {
    right: -5px;
  }

  .product-nav-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Product Dots */
  .product-dots {
    display: flex;
    justify-content: center;
    gap: 6px;
    margin-top: 8px;
  }

  .product-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #ddd;
    border: none;
    cursor: pointer;
    transition: background 0.3s, transform 0.2s;
    padding: 0;
  }

  .product-dot.active {
    background: #333;
    transform: scale(1.2);
  }

  /* Main Carousel Navigation */
